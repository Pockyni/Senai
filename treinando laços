        function tabuada (numero){
            for(i = 1; i <=10; i++){
                console.log(`${numero} x ${i} = ${numero * i }`)
            }
        }

        //Contagem regressiva 
        
        function contagemRegressiva (value) { 
            for(i = value; i >= 0; i --) { 
                if(i === 0) {
                    console.log('Feliz Ano Novo !')
                }
                    console.log (i)
                }
            }
    contagemRegressiva(5)
