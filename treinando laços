function contagemC (limite) {
    let somaPares = 0
    let somaImpares = 0 
    for (numero = 0; numero <= limite; numero++ ) {
        if (numero % 2 === 0 ) {
            somaPares += numero 
         } else {
                    somaImpares += numero

                }
            }
                return `A soma de pares ${somaPares}, e as dos impares  ${somaImpares}`
        }

